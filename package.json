{
  "name": "roadtoromeapp.com",
  "version": "0.1.0",
  "description": "Promotional website for the mobile application Road To Rome",
  "scripts": {
    "test": "eslint ./ --ignore-pattern node_modules --ignore-pattern public",
    "build:js": "source .env && browserify src/main.js -t babelify -t yo-yoify -t [ babelify --plugins [ transform-es2015-template-literals ] ] -t envify > public/main.js",
    "build:css": "postcss -u postcss-import -u postcss-custom-media src/main.css --map --output public/main.css",
    "build": "npm run build:js & npm run build:css",
    "compress:js": "cat public/main.js | uglifyjs | gzip -9 -c > public/main.js.gz",
    "compress:css": "cat public/main.css | csso | gzip -9 -c > public/main.css.gz",
    "compress": "npm run compress:js & npm run compress:css",
    "nodemon": "nodemon -w src -e css -x 'npm run build:css'",
    "watchify": "source .env && watchify src/main.js -d -o public/main.js -t babelify -t envify",
    "start": "npm run watchify & npm run nodemon & http-server public -s -p 3000"
  },
  "repository": {
    "type": "git",
    "url": "github.com/tornqvist/roadtoromeapp.com"
  },
  "author": "Carl TÃ¶rnqvist <calle.tornqvist@gmail.com>",
  "license": "UNLICENSED",
  "devDependencies": {
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.13.2",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "csso": "^2.2.1",
    "envify": "^3.4.1",
    "eslint": "^3.3.1",
    "geojson-extent": "^0.3.2",
    "http-server": "^0.9.0",
    "mapbox": "^1.0.0-beta3",
    "mapbox-gl": "^0.22.0",
    "minidux": "^1.0.1",
    "nodemon": "^1.10.0",
    "postcss-cli": "^2.5.2",
    "postcss-custom-media": "^5.0.1",
    "postcss-import": "^8.1.2",
    "redux": "^3.5.2",
    "suitcss-base": "^2.0.0",
    "suitcss-components-button": "^5.0.0",
    "suitcss-components-grid": "^3.0.3",
    "suitcss-utils-display": "^1.0.2",
    "suitcss-utils-flex": "^1.1.1",
    "suitcss-utils-layout": "^1.0.1",
    "suitcss-utils-position": "^1.0.1",
    "suitcss-utils-size": "^2.0.0",
    "suitcss-utils-space": "^0.4.1",
    "suitcss-utils-text": "^1.0.0",
    "uglify-js": "^2.7.1",
    "watchify": "^3.7.0",
    "yo-yo": "^1.2.2",
    "yo-yoify": "^3.4.1"
  }
}
